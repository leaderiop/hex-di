{
  "name": "@hex-di/ports",
  "version": "0.1.0",
  "description": "Port token system for HexDI - typed, branded port tokens for service interfaces",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "vitest run --typecheck",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "hexagonal-architecture",
    "ports",
    "typescript",
    "type-safe"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hex-di/hex-di.git",
    "directory": "packages/ports"
  },
  "bugs": {
    "url": "https://github.com/hex-di/hex-di/issues"
  },
  "homepage": "https://github.com/hex-di/hex-di/tree/main/packages/ports#readme",
  "peerDependencies": {
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
