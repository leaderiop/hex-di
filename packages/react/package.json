{
  "name": "@hex-di/react",
  "version": "0.1.0",
  "description": "React integration for HexDI - type-safe hooks, Provider components, and automatic scope lifecycle management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "vitest run --typecheck",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "hexagonal-architecture",
    "react",
    "hooks",
    "typescript",
    "type-safe",
    "context"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hex-di/hex-di.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/hex-di/hex-di/issues"
  },
  "homepage": "https://github.com/hex-di/hex-di/tree/main/packages/react#readme",
  "dependencies": {
    "@hex-di/ports": "workspace:*",
    "@hex-di/runtime": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jsdom": "^24.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
